<div class="bg-cyan-600 w-full flex justify-between items-center p-5">
  <a href="/" class="text-xl text-white font-semibold">PPAM - Malabo</a>
  <button
    id="logout"
    class="border-2 border-white px-5 py-2 rounded-lg text-white text-lg hover:bg-white hover:text-cyan-600 transition-colors"
    >Cerrar Sesi√≥n</button
  >
</div>

<script>

  const signOutBtn = document.querySelector('#logout') as HTMLButtonElement;

  document.addEventListener("DOMContentLoaded", async () => {
    try {
      const { signOut } = await import("auth-astro/client");
      const logoutButton = document.querySelector("#logout");

      if (logoutButton) {
        logoutButton.addEventListener("click", async (e) => {
          e.preventDefault();
          await signOut();
          window.location.replace("/signin");
        });
      }
    } catch (error) {
      console.error("Error importing auth-astro/client:", error);
    }
  });


</script>
