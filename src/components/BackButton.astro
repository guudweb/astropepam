---
interface Props {
    href: string;
    iconsClass: string;
}

const { href, iconsClass } = Astro.props;
---

<a
    href={href}
    class="ml-5 bg-cyan-600 px-5 py-2 text-white mb-10 inline-block rounded-lg hover:bg-cyan-700 transition-colors"
>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class={iconsClass}
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
        ></path>
    </svg>
</a>
